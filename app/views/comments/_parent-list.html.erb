<div class="parent-list">
  <div class="toggle"><i class="far fa-caret-square-up"></i></div>
  <div class="toggle dnone"><i class="far fa-caret-square-down"></i></div>
  <div class="hidden-link dnone">Раскрыть ветку&nbsp;&nbsp;<i class="far fa-comment-alt"></i></div>
  <% if comment.comments.present? %>
    <% comment.comments.each do |comment| %>
      <%= render 'comments/parent-comment', comment: comment%>
    <% end %>
  <% else %>
    <%= render 'comments/parent-comment', comment: comment%>
  <% end %>
</div>
