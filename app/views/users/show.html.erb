<div class="card shadow">
  <div class="card-title image rounded-top" id="set">

  </div>
  <div class="card-body" style="background-col p-2 text-centeror: white">
    <h1 class="text-center mt-2"><%= @user.name %></h1>
    <p class="text-center">On Gizeh 2 days</p>
    <div class="d-flex justify-content-center mb-5"><%= link_to 'Edit profile', '#' %></div>
    <hr>
    <p class="text-center">Pushed 0 pluses and 0 minuses</p>
    <hr>
    <div class="d-flex">
      <div class="col p-2 text-center font-weight-bold">100</div>
      <div class="col p-2 text-center font-weight-bold">0</div>
      <div class="col p-2 text-center font-weight-bold">0</div>
      <div class="col p-2 text-center font-weight-bold"><%= @user.articles.count %></div>
      <div class="col p-2 text-center font-weight-bold">0</div>
    </div>
    <div class="d-flex ">
      <div class="col p-2 text-center text-center">Rating</div>
      <div class="col p-2 text-center">Subs</div>
      <div class="col p-2 text-center">Comments</div>
      <div class="col p-2 text-center">Articles</div>
      <div class="col p-2 text-center">In hot</div>
    </div>
  </div>
</div>
<div class="card shadow my-4">
  <div class="card-body">
    <div class="d-flex">
      <div class="col p-2 text-center">On time</div>
      <div class="col p-2 text-center">On rating</div>
      <div class="col p-2 text-center">[MINE]</div>
      <div class="col p-2 text-center">Search</div>
      <div class="col p-2 text-center">Icon</div>
    </div>
  </div>
</div>

<% if @user.articles.count == 0 %>
  <div class="card shadow mt-4">
    <div class="card-body">
      There are no posts here yet
    </div>
  </div>
<% else %>
  <%= render partial: "articles/articles", locals: { articles: @user.articles } %>
<% end %>
