<% @articles.each do |article| %>
  <div id="accordion" role="tablist">
    <div class="d-flex flex-row mb-5">
      <div class="mr-3">
        <div class="btn-group-vertical shadow" role="group" aria-label="Basic example">
          <button type="button" class="btn btn-secondary">▲</button>
          <button type="button" class="btn btn-secondary">19</button>
          <button type="button" class="btn btn-secondary">▼</button>
        </div>
        <div class="card mt-3" data-toggle="collapse" href="#collapse<%= "#{article.id}" %>" aria-expanded="true" aria-controls="collapse<%= "#{article.id}" %>">
          <div class="px-3 font-weight-bold text-center">−</div>
        </div>
      </div>
      <div class="ml-3 w-100">
        <div class="card shadow">
          <div class="card-header">
            <strong class="card-title" style="font-size: 25px" id="a"><%= link_to "#{article.title}", article %></strong>
          </div>
          <div id="collapse<%= "#{article.id}" %>" class="collapse show" role="tabpanel" aria-labelledby="heading<%= "#{article.id}" %>">
            <div class="card-body">
              <p class="card-text"><%= simple_format(article.post) %></p>
            </div>
          </div>
          <div class="card-footer">
            <div class="float-left">Creator: <%= link_to "#{article.user.name}", user_account_user_path(article.user) %></div>
            <div class="float-right"><%= distance_of_time_in_words(Time.now, article.created_at, include_seconds: true) %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
