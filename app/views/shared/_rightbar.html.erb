<div class="card">
  <div class="card-body shadow">
    <% if user_signed_in? %>
      <h4 class="card-title"><%= link_to "#{current_user.name}", user_path(current_user.id) %></h4>
      <h6 class="card-subtitle mb-2 text-muted"><%= current_user.email %></h6>
      <div class="card-text">
        <ul class="ul">
          <li><%= link_to 'Articles', user_path(current_user.id) %></li>
          <li><%= link_to 'Comments', '#' %></li>
          <li><%= link_to 'Saved', '#' %></li>
          <li><%= link_to 'Subscribes', '#' %></li>
          <li><%= link_to 'Ban-list', '#' %></li>
          <li><%= link_to 'Notes', '#' %></li>
        </ul>
      </div>
      <%= link_to 'Sign out', sign_out_path , class: 'text-left mt-2 d-block'  %>
    <% else %>
      <h4 class="card-title text-center">Authorization</h4>
      <form class="form-group my-2">
        <%= link_to 'Sign in', sign_in_path, class: 'btn btn-success d-block' %>
      </form>
      <%= link_to 'Sign up', sign_up_path, class: 'text-center d-block' %>
    <% end %>
  </div>
</div>
<%= link_to '+ New Post', new_article_path, class: 'btn btn-success mt-4 d-block shadow' %>
