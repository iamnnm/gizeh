<h2 class="pb-4 text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <form>
    <div class="form-group">
      <%= f.label :email, class: 'font-weight-bold' %><br />
      <%= f.email_field :email, autocomplete: "email", class: 'form-control px-4 py-4' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'font-weight-bold' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control px-4 py-4' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary d-block w-100  px-3 py-3' %>
    </div>

    <div class="mt-2">
      <hr>
    </div>

  </form>
<% end %>

<%= render "devise/shared/links" %>
